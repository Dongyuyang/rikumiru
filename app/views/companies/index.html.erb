<% title "企業一覧 - リクリブ" -%>

<div class="col-xs-12">
  <div class="header">
    <h2>
      企業一覧
      <small><%= t('title') %> - 会社数：<%= Company.count %></small>
    </h2>
  </div>
</div>

<div class="col-xs-12 col-sm-7">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
	<th>
	  企業名
	</th>
	<th>
	  話題数
	</th>
	<th>
	  人気話題
	</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| -%>
      <tr>
	<td>
	  <%= link_to company.name, company_path(company) -%>
	  <% if can?(:admin, current_user) && show_admin? -%>
	    <%= link_to 'Edit', edit_company_path(company) %>
	    <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %>
	  <% end -%>
	</td>
	<td>
	  <%= company.tweet_count -%>件
	</td>
	<td>
	  <% keyword = company.keywords_rank.first[0] -%>
	  <%= link_to keyword.name, company_path(company) + "?k=#{keyword.id}" %>
	</td>
      </tr>
      <% end -%>
    </tbody>
  </table>
  <%= paginate @companies %>

  <% if can?(:admin, current_user) && show_admin? -%>
    <br />
    <%= link_to 'New Company', new_company_path %>
  <% end -%>
</div>

<div class="col-xs-12 col-sm-5">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h4 class="panel-title">
	<%= fa_icon "list-alt", text: "業界 Index" -%>
      </h4>
    </div>
    <div class="panel-body">
      <% @main_indices.each do |main| -%>
	<p>
	<%= main.name -%><br />
	<% main.sub_indices.each do |sub| -%>
	  <%= link_to sub.name, "#" -%> |
	<% end -%>
	</p>
      <% end -%>
    </div>
  </div>
</div>
