<div class="pull-right">Facebook, Twitter, Googl+</div>
<div class="page-header">
  <h2>
    Twitter上の就職話題度をチェック
    <div class="pull-right"><small>就職話題数: <%= Tweet.count %>件</small></div>
  </h2>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= link_to keywords_path do -%>
	    <%= fa_icon "external-link", text: "就職の話題（件）", right: true -%>
	  <% end -%>
	</h4>
      </div>
      <div class="panel-body">
	<% @keywords.each do |keyword| -%>
	  <p><%= keyword.name -%>: <%= link_to "#{keyword.tweet_count}", keyword_path(keyword) -%></p>
	<% end -%>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= fa_icon "twitter", text: "最新ツイート", right: true -%>
	</h4>
      </div>
      <ul class="tweets list-group">
	<% @tweets.each_with_index do |tweet, i| -%>
	  <li class="list-group-item">
	    <div class="media">
	      <div class="media-body">
		<div class="media-heading help-block"><%= link_to "@#{tweet.username}", "https://twitter.com/#{tweet.username}/status/#{tweet.id}" -%> <small><%= time_ago_in_words tweet.created_at %></small></div>
		<%= tweet.text -%>
		<% if can? :admin, current_user -%>
		  <ul class="list-inline">
		    <li>
		      <div class="<%= tweet.id %>-real">
			<% if tweet.useful == true %>
			  Real
			<% else %>
			  <%= form_for(tweet, html: {multipart: :true}, remote: true) do |f| %>
			    <%= f.hidden_field :useful, value: 1 %>
			    <%= f.submit "Useful", class: "btn btn-default btn-xs" %>
			  <% end %>
			<% end %>
		      </div>
		    </li>
		    <li>
		      <div class="<%= tweet.id %>-spam">
			<% if tweet.useful == false %>
			  Spam
			<% else %>
			  <%= form_for(tweet, html: {multipart: :true}, remote: true) do |f| %>
			    <%= f.hidden_field :useful, value: 0 %>
			    <%= f.submit "Unuseful", class: "btn btn-default btn-xs" %>
			  <% end %>
			<% end %>
		      </div>
		    </li>
		    <li>
		      <%= link_to 'Del', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs", remote: true %>
		    </li>
		  </ul>
		<% end -%>
	      </div>
	    </div>
	  </li>
	<% end -%>
      </ul>
    </div>
  </div>

  <div class="col-xs-12 col-sm-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= link_to companies_path do -%>
	    <%= fa_icon "external-link", text: "企業（話題数）", right: true -%>
	  <% end -%>
	</h4>
      </div>
      <div class="panel-body">
	<% @companies.each do |c| -%>
	  <p><%= c.name -%>: <%= link_to "#{c.tweet_count}", company_path(c) -%></p>
	<% end -%>
      </div>
    </div>
  </div>
</div><!--/row-->
