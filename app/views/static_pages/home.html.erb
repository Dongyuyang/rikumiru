<div class="page-header">
  <h2>
    <div class="pull-right"><small>就職話題数: <%= Tweet.count %>件</small></div>
    <%= t('title') -%>
  </h2>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= link_to keywords_path do -%>
	    <%= fa_icon "external-link", text: "就職の話題（件）" -%>
	  <% end -%>
	</h4>
      </div>
      <div class="panel-body">
	<div class="row">
	  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	  <!-- sidebar -->
	  <ins class="adsbygoogle col-xs-12"
	       style="display:inline-block;height:50px"
	       data-ad-client="ca-pub-8503004762159282"
	       data-ad-slot="9666221052"></ins>
	  <script>
	    (adsbygoogle = window.adsbygoogle || []).push({});
	  </script>
	</div>
	<% @keywords.each do |keyword| -%>
	  <p>
	    <%= keyword.name -%>
	    <strong>
	      <%= link_to keyword.tweet_count, keyword_path(keyword), class: "pull-right" -%>
	    </strong>
	  </p>
	<% end -%>
	<p>
	  <%= link_to "もっと見る", keywords_path -%>
	</p>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= fa_icon "bar-chart", text: "就職トレンド", right: true -%>
	</h4>
      </div>
      <div class="panel-body">
	<%= line_chart static_pages_chart_data_path %>
      </div>
    </div>

    <div class="panel panel-primary latest-tweet">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= fa_icon "twitter", text: "最新ツイート", right: true -%>
	  <div class="pull-right">
	    <%= form_tag static_pages_update_path, html: {multipart: :true}, remote: true do -%>
	      <%= hidden_field_tag(:offset, "10") %>
	      <%= submit_tag "次の10件を表示", class: "btn btn-default btn-xs" %>
	    <% end -%>
	  </div>
	</h4>
      </div>
      <ul class="list-group">
	<% @tweets.each_with_index do |tweet, i| -%>
	  <li class="list-group-item <%= tweet.id %>">
	    <%= render partial: 'tweets/tweet', locals: { tweet: tweet, show_company: true } -%>
	  </li>
	<% end -%>
      </ul>
    </div>
  </div>

  <div class="col-xs-12 col-sm-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
	<h4 class="panel-title">
	  <%= link_to companies_path do -%>
	    <%= fa_icon "external-link", text: "企業（話題数）" -%>
	  <% end -%>
	</h4>
      </div>
      <div class="panel-body">
	<div class="row">
	  <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
	  <!-- sidebar -->
	  <ins class="adsbygoogle col-xs-12"
	       style="display:inline-block;height:50px"
	       data-ad-client="ca-pub-8503004762159282"
	       data-ad-slot="9666221052"></ins>
	  <script>
	    (adsbygoogle = window.adsbygoogle || []).push({});
	  </script>
	</div>
	<% @companies.each do |c| -%>
	  <p>
	    <%= c.name -%>
	    <strong>
	      <%= link_to c.tweet_count, company_path(c), class: "pull-right" -%>
	    </strong>
	  </p>
	<% end -%>
	<p>
	  <%= link_to "もっと見る", companies_path -%>
	</p>
      </div>
    </div>
  </div>
</div><!--/row-->
