<p id="notice"><%= notice %></p>

<div class="pull-right">Facebook, Twitter, Googl+</div>
<div class="page-header">
  <h2>
    <%= @keyword.name %>
    <small>題数: <%= @keyword.tweet_count %>件</small>
  </h2>
</div>

<% @tweets.each do |tweet| -%>
  <p class="<%= tweet.id %>">
    @<%= tweet.username -%> <%= time_ago_in_words tweet.created_at %><br />
    <%= tweet.text -%>
    <%= render partial: 'tweets/admin', locals: { tweet: tweet } -%>
  </p>
<% end -%>

<%= paginate @tweets %>

