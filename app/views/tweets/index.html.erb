count: <%= @count %>

<table class="table">
  <thead>
    <tr>
      <th>Company<th>
      <th>Text</th>
      <th>updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.company.name %></td>
        <td><%= tweet.text %></td>
        <td><%= tweet.updated_at %></td>
	<td>
	  <% if tweet.useful == true %>
	  Real
	  <% else %>
	  <%= form_for(tweet) do |f| %>
	  <%= f.hidden_field :useful, value: 1 %>
	  <%= f.submit "Useful", class: "btn btn-default btn-xs" %>
	  <% end %>
	  <% end %>
	</td>
	<td>
	  <% if tweet.useful == false %>
	  Spam
	  <% else %>
	  <%= form_for(tweet) do |f| %>
	  <%= f.hidden_field :useful, value: 0 %>
	  <%= f.submit "Unuseful", class: "btn btn-default btn-xs" %>
	  <% end %>
	  <% end %>
	</td>
        <td><%= link_to 'Del', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @tweets %>

